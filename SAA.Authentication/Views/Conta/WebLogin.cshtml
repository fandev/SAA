<hgroup class="title">
    <h2>Formulário de Login</h2>
</hgroup>

@using (Html.BeginForm()) {  
    @Html.ValidationSummary()
        <form role="form">
            <div class="form-group">
                <p>Selecione o tipo de autenticação</p>
                <input type="radio" value="true" name="domain" checked="checked" required /> Dominio
                <input type="radio" value="false" name="domain" required  /> Local
            </div>
            <div class="form-group">
                <label for="Usuario">Usuario *</label>
                <input type="text" class="form-control" id="Usuario"  name="Usuario" placeholder="Digite o nome do Usuário" required autocomplete="off" autofocus>
            </div>
            <div class="form-group">
                <label for="Senha">Senha *</label>
                <input type="password" class="form-control" id="Senha" name="Senha" placeholder="Digita sua senha" required autocomplete="off">
            </div>
            
            <button type="submit" class="btn btn-default">Entrar</button>
        </form>

        <ul>
            <li>user identity @User.Identity.Name</li>
            <li>thead identity @System.Threading.Thread.CurrentPrincipal.Identity.Name</li>
        </ul>
}
